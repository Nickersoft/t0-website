---
import { Image } from "astro:assets";

import { ChevronRight } from "@/icons";

import Tether from "@/assets/svg/tether.svg";
import Bank from "@/assets/svg/iso/bank.svg";
import CC from "@/assets/svg/iso/cc.svg";
import Pipeline from "@/assets/svg/iso/pipeline.svg";

import PageLayout from "@/layouts/PageLayout.astro";

import * as Hero from "@/components/home/hero";

import quote from "@/assets/png/quote.png";

import { Blockquote, BlockquoteAuthor } from "@/components/ui/Blockquote";

import {
  Card,
  CardDescription,
  CardHeader,
  CardTitle,
} from "@/components/ui/Card";
import { Grid } from "@/components/ui/Grid";
import { Statistic } from "@/components/ui/Statistic";
import { Stack } from "@/components/ui/Stack";
import {
  Item,
  ItemActions,
  ItemContent,
  ItemDescription,
  ItemMedia,
  ItemTitle,
} from "@/components/ui/Item";
import { Link } from "@/components/ui/Link";
import { ItemSeparator } from "@/components/ui/Item";
import { ItemGroup } from "@/components/ui/Item";
import {
  Section,
  SectionHeader,
  SectionSubtitle,
  SectionTitle,
} from "@/components/ui/Section";
import {
  Accordion,
  AccordionContent,
  AccordionItem,
  AccordionTrigger,
} from "@/components/ui/Accordion";
import { getCollection } from "astro:content";
import { FAQ } from "@/components/ui/FAQ";

const faq = await getCollection("faq");
---

<PageLayout title="Home">
  <!------------------------------------ HERO ------------------------------------>

  <Hero.Root>
    <Hero.Title>Money without borders</Hero.Title>
    <Hero.Subtitle>
      Move money instantly, at low cost, with the world’s most liquid stablecoin
      settlement network. Built for institutions. Powered by USDT.
    </Hero.Subtitle>
    <Hero.Action>
      Access the network
      <ChevronRight />
    </Hero.Action>
    <Hero.Subline>
      Backed by <Tether />
    </Hero.Subline>
  </Hero.Root>

  <!---------------------------------- FEATURES ---------------------------------->

  <Section>
    <SectionHeader>
      <SectionTitle> The network for global money movement</SectionTitle>
      <SectionSubtitle>
        t-0 connects licensed financial institutions through a single
        integration, using stablecoin liquidity and net settlement to make
        cross-border transfers faster, cheaper, and more efficient than legacy
        rails.
      </SectionSubtitle>
    </SectionHeader>

    <Grid
      columns={4}
      gap="lg"
      className="max-lg:grid-cols-2 max-sm:grid-cols-1"
    >
      <Card>
        <CardHeader>
          <CardTitle>Fast global transfers</CardTitle>
          <CardDescription>
            Transfer value with near-instant settlement across 1200+ possible
            payment corridors and FX pairs.
          </CardDescription>
        </CardHeader>
      </Card>
      <Card>
        <CardHeader>
          <CardTitle>Slash FX costs</CardTitle>
          <CardDescription>
            Execute global transfers for bps, not percentages. You are never
            exposed to the target currency FX rate.
          </CardDescription>
        </CardHeader>
      </Card>
      <Card>
        <CardHeader>
          <CardTitle>Generate new business</CardTitle>
          <CardDescription>
            Execute payment volumes in your specialist currencies on behalf of
            other t-0 Network members
          </CardDescription>
        </CardHeader>
      </Card>
      <Card>
        <CardHeader>
          <CardTitle>Access emerging markets</CardTitle>
          <CardDescription>
            t-0 connects you to local payment rails via licensed FI's in 50+
            countries via a single API.
          </CardDescription>
        </CardHeader>
      </Card>
    </Grid>
  </Section>

  <!--------------------------------- COMPARISON --------------------------------->

  <Section>
    <SectionHeader>
      <SectionTitle>
        A <em>swifter</em> way to move money
      </SectionTitle>
      <SectionSubtitle>
        Traditional cross-border payments are slowed by legacy infrastructure,
        creating unnecessary cost and complexity. t-0 network provides a direct,
        programmable, and more efficient path for money movement.
      </SectionSubtitle>
    </SectionHeader>
  </Section>

  <!-------------------------------- HOW IT WORKS -------------------------------->

  <Section>
    <SectionHeader>
      <SectionTitle> International payments that feel local </SectionTitle>
      <SectionSubtitle>
        A single network that lets institutions collect, settle, and pay out
        across borders.
      </SectionSubtitle>
    </SectionHeader>
  </Section>

  <!---------------------------------- USE CASES --------------------------------->

  <Section variant="accented" layout="horizontal">
    <SectionHeader className="flex-1" align="left">
      <SectionTitle> Powered by Tether. Built for institutions. </SectionTitle>

      <SectionSubtitle className="mb-6">
        t-0 is strategically backed by Tether to bring USDT's deep global
        liquidity to regulated financial institutions. We provide the compliant,
        institutional-grade layer that makes stablecoin settlement a reality for
        global finance.
      </SectionSubtitle>

      <Statistic
        client:visible
        statistic={0.82}
        animated
        formatOptions={{ style: "percent" }}
        label="of global stablecoin volume flows through USDT"
      />
    </SectionHeader>

    <ItemGroup className="[&_a]:h-auto [&_a]:p-0">
      <Item size="lg">
        <ItemMedia>
          <Bank />
        </ItemMedia>
        <ItemContent>
          <ItemTitle> For banks </ItemTitle>
          <ItemDescription>
            Optimise liquidity and reduce FX exposure through instant, low cost,
            stablecoin net settlement.
          </ItemDescription>
          <ItemActions>
            <Link href="#">
              Learn more
              <ChevronRight />
            </Link>
          </ItemActions>
        </ItemContent>
      </Item>

      <ItemSeparator />

      <Item size="lg">
        <ItemMedia>
          <Pipeline />
        </ItemMedia>
        <ItemContent>
          <ItemTitle> For fintechs </ItemTitle>
          <ItemDescription>
            Grow revenue, expand currency coverage and unlock new payment
            corridors powered by USDT liquidity.
          </ItemDescription>
          <ItemActions>
            <Link href="#">
              Learn more
              <ChevronRight />
            </Link>
          </ItemActions>
        </ItemContent>
      </Item>

      <ItemSeparator />

      <Item size="lg">
        <ItemMedia>
          <CC />
        </ItemMedia>
        <ItemContent>
          <ItemTitle> For payment platforms </ItemTitle>
          <ItemDescription>
            Collect and pay out globally through a single API, simplifying
            treasury and reconciliation.
          </ItemDescription>
          <ItemActions>
            <Link href="#">
              Learn more
              <ChevronRight />
            </Link>
          </ItemActions>
        </ItemContent>
      </Item>
    </ItemGroup>
  </Section>

  <!---------------------------------- QUOTATION --------------------------------->

  <Section>
    <Stack
      className="mx-auto max-w-3xl"
      align="center"
      gap="none"
      orientation="column"
    >
      <Image
        alt="Glowing quotation mark"
        src={quote}
        width={72}
        layout="fixed"
        class="-mb-4"
      />
      <Blockquote>
        <blockquote>
          USDT has become the world’s leading stablecoin because it solves real
          problems. Our investment makes T-0 the first network to prioritise
          USDT liquidity for real-world settlement - <strong
            >bringing compliant, programmable cross-border payments to
            institutions, especially in emerging markets where stable, efficient
            infrastructure matters most.
          </strong>
        </blockquote>
        <BlockquoteAuthor name="Paolo Ardoino" title="CEO of Tether" />
      </Blockquote>
    </Stack>
  </Section>

  <Section>
    <SectionHeader>
      <SectionTitle> Seamless movement between 1,200+ FX pairs </SectionTitle>
      <SectionSubtitle>
        On t-0, there are no 'hard' currency pairs. Our correspondent model
        allows you to pair any two supported currencies, creating 1200+ possible
        corridors for instant, low cost payments.
      </SectionSubtitle>
    </SectionHeader>
  </Section>

  <Section layout="horizontal">
    <SectionHeader align="left">
      <SectionTitle className="max-w-sm">
        Frequently Asked Questions
      </SectionTitle>
    </SectionHeader>

    <FAQ questions={faq} client:visible />
  </Section>
</PageLayout>
